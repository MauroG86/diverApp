<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://www.nativescript.org/tns.xsd"
    xmlns:dd="nativescript-drop-down">

    <Page.actionBar>
        <ActionBar class="action-bar" title="{{ event.name }}">
            <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="goBack" style="color: #034793"/>
        <ActionItem visibility="{{ editButtonVisible }}">
            <Label text="&#xf040;" class="font-awesome" style="color: #ffffff; padding-right: 35px; font-size: 25;" tap="editEvent"/>
        </ActionItem>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="auto, auto, auto, auto, auto, auto, auto, auto, *, auto">
        <Label text="{{ 'Event abgesagt am ' + event.canceledDate }}" style="color: #c42323" visibility="{{ event.canceled ? 'visible' : 'collapsed' }}"/>
        <Label text="{{ 'Name: ' + event.name }}" row="1"/>
        <Label text="{{ 'Typ: ' + event.type }}" row="2"/>
        <Label text="{{ 'Ort:  &#xf041;  ' + event.divesite.name }}" row="3" class="font-awesome" tap="viewDivesite"/>
        <Label text="{{ 'Datum: ' + event.date }}" row="4"/>
        <Label text="{{ 'Uhrzeit: ' + event.time }}" row="5" />
        <Label text="{{ event.public ? 'Sichtbarkeit: Ã–ffentlich' : 'Sichtbarkeit: Privat' }}" row="6" />
        <Label text="{{ 'Kommentar: ' + event.comment }}" textWrap="true" row="7" />
        <dd:DropDown hint="Status" items="{{ status }}" selectedIndex="{{ selectedStatus }}" selectedIndexChanged="statusChanged" row="9"/>
    </GridLayout>

</Page>
