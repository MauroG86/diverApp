<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://www.nativescript.org/tns.xsd"
    xmlns:dd="nativescript-drop-down">

    <Page.actionBar>
        <ActionBar class="action-bar" title="{{ isNewEvent ? 'Neues Event' : 'Event editieren' }}">
            <ActionItem>
                <Label text="&#xf00c;" class="font-awesome" tap="saveChanges"/>
            </ActionItem>
            <ActionItem>
                <Label text="&#xf00d;" class="font-awesome" tap="discardChanges"/>
            </ActionItem>
        </ActionBar>
    </Page.actionBar>
    <ScrollView>
        <GridLayout rows="auto, auto, auto, auto, auto, auto, auto">
            <TextField hint="Name" text="{{ event.name }}"/>
            <TextView hint="Kommentar" text="{{ event.comment }}" row="1"/>
            <TextField id="dateField" hint="Tag" editable="false" text="{{ event.date }}" tap="selectDate" row="2"/>
            <TextField id="timeField" hint="Uhrzeit" editable="false" text="{{ event.time }}" tap="selectTime" row="3" />
            <dd:DropDown hint="Typ" items="{{ types }}" selectedIndex="{{ selectedType }}" row="4" selectedIndexChanged="typeChanged" style="color: black; margin-left: -15px"/>
            <dd:DropDown id="divesitesDD" hint="Veranstaltungsort" selectedIndex="{{ selectedDivesite }}" selectedIndexChanged="divesiteChanged" row="5" style="color: black; margin-left: -15px"/>
            <Button visibility="{{ cancelVisible }}" text="Event absagen" tap="cancelEvent" row="6"/>
        </GridLayout>
    </ScrollView>

</Page>
